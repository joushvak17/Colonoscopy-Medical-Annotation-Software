name: "Colonoscopy Medical Annotation Project"

conda_env: conda.yaml

entry_points:
    Multi-Class Classification Component:
        command: command: "python Machine Learning Components/MC Classification Component/modular/train.py --num_epochs {num_epochs} --patience {patience} --min_delta {min_delta} --batch_size {batch_size} --learning_rate {learning_rate} --weight_decay {weight_decay} --hidden_units {hidden_units} --model_path {model_path}"
        parameters:
            num_epochs: {type: int, default: 20}
            patience: {type: int, default: 5}
            min_delta: {type: float, default: 0.001}
            batch_size: {type: int, default: 32}
            learning_rate: {type: float, default: 0.001}
            weight_decay: {type: float, default: 0.0001}
            hidden_units: {type: int, default: 10}
            model_path: {type: str}